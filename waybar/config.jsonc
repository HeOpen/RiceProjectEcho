        "format-bluetooth": "{icon}  {volume}%",
        "format-muted": "Û∞ùü ",
        "format-icons": {
            "headphone": "ÔÄ• ",
            "hands-free": "Ôä£ ",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄß ", "ÔÄ®  "]
        },
        "scroll-step": 1,
